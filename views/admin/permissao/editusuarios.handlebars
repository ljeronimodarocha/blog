{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Editar Postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/usuarios/edit" method="POST">
            <input type="hidden" name="id" value="{{usuario._id}}">
            <p>
                <label for="nome">Nome:</label>
                <input type="text" name="nome" id="nome" class="form-control" value="{{usuario.nome}}">
            </p>
            <p>
                <label for="email">E-mail:</label>
                <input type="text" id="email" name="email" class="form-control" value="{{usuario.email}}">
            </p>
            <p><button type="submit" class="btn btn-success">Salvar</button></p>

        </form>
    </div>
</div>
