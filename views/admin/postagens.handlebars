<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>
<hr>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4><strong>Título:</strong> {{titulo}}</h4>
        <p><strong>Descrição:</strong> {{descricao}}</p>
        <p><small><strong>Data: </strong>{{data}}</small></p>
        <p><small><strong>Categoria:</strong> {{categoria.nome}}</small></p>
        <a href="/admin/postagem/edit/{{_id}}"><button type="submit" class="btn btn-success">Editar postagem</button></a>
        <a href="/admin/postagens/deletar/{{_id}}"><button type="submit" class="btn btn-danger">Deletar postagem</button></a>
    </div>
</div>
{{else}}
<h4>Nenhuma postagem registrada</h4>
{{/each}}