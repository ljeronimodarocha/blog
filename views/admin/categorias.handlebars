<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
<hr>
{{#each categorias}}
<div class="card mt-4">
    <div class="card-body ">
        <h4>{{nome}}</h4>
        <small>Slug: {{slug}}</small>
        <p><small>Data de criação: {{date}}</small></p>
        <p><a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-success">Editar Categoria</button></a></p>
        <form action="/admin/categorias/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger">Deletar Cadastrar</button>
        </form>
    </div>
</div>

{{else}}
<h4>Nenhuma categoria registrada!</h4>
{{/each}}